# Configurações do Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_MODEL_NAME=gpt-4

# Configurações do GitLab
GITLAB_API_URL=https://gitlab.company.com/api/v4
GITLAB_ACCESS_TOKEN=your-gitlab-token-here
GITLAB_PROJECT_ID=your-project-id

# Configurações da Aplicação
APP_NAME=CodeGuardian
APP_VERSION=0.1.0
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# Configurações do Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true

# Configurações de Segurança
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Configurações de Banco de Dados (se necessário no futuro)
DATABASE_URL=sqlite:///./code_guardian.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Configurações de Cache (se necessário no futuro)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/code_guardian.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Configurações de Testes
TEST_AZURE_OPENAI_ENDPOINT=https://test-resource.openai.azure.com/
TEST_AZURE_OPENAI_API_KEY=test-api-key
TEST_ENVIRONMENT=testing
